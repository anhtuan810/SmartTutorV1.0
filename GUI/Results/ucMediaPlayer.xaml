<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="GUI.ucMediaPlayer"
	x:Name="UserControl"
	d:DesignWidth="640" d:DesignHeight="480">

	<Grid x:Name="LayoutRoot">
		<MediaElement Margin="0"/>
		<Grid Margin="0" VerticalAlignment="Bottom" Height="50" Background="Black" Opacity="0.2">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="50"/>
				<ColumnDefinition/>
				<ColumnDefinition Width="50"/>
			</Grid.ColumnDefinitions>
			<Slider Grid.Column="1" Margin="0" Height="22" VerticalAlignment="Center"/>
			<Rectangle Fill="#FF80809B" HorizontalAlignment="Center" Height="30" Margin="0" Stroke="Black" StrokeThickness="0" VerticalAlignment="Center" Width="30"/>
			<Rectangle Fill="#FF80809B" HorizontalAlignment="Center" Height="30" Margin="0" Stroke="Black" StrokeThickness="0" VerticalAlignment="Center" Width="30" Grid.Column="2"/>
		</Grid>
	</Grid>
</UserControl>